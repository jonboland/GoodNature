@model GoodNature.Areas.Admin.Models.UsersCategoryListModel
@using GoodNature.Comparers

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th class="text-center w-15">Selected</th>
            <th class="text-center w-15">Active</th>
        </tr>
    </thead>

    <tbody>
        @if(Model.Users != null)
        {
            @foreach(var user in Model.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td class="text-center">
                        @if(Model.UsersSelected != null && Model.UsersSelected.Contains(user, new CompareUsers()))
                        {
                            <input type="checkbox" id="usersSelected" name="usersSelected" class="form-check-inline m-0" checked value="@user.Id" />
                        }
                        else
                        {
                            <input type="checkbox" id="usersSelected" name="usersSelected" class="form-check-inline m-0" value="@user.Id" />
                        }
                    </td>
                    <td class="text-center">
                        @if(Model.UsersActive != null && Model.UsersActive.Contains(user, new CompareUsers()))
                        {
                            <input type="checkbox" id="usersActive" name="usersActive" class="form-check-inline m-0" checked value="@user.Id" />
                        }
                        else
                        {
                            <input type="checkbox" id="usersActive" name="usersActive" class="form-check-inline m-0" value="@user.Id" />
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
