@model GoodNature.Areas.Admin.Models.UsersCategoryListModel
@using GoodNature.Comparers

<table>
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>

    <tbody>
        @if(Model.Users != null)
        {
            @foreach(var user in Model.Users)
            {
                <tr>
                    <td style="text-align:center">
                        @if(Model.UsersSelected != null && Model.UsersSelected.Contains(user, new CompareUsers()))
                        {
                            <input type="checkbox" id="usersSelected" name="usersSelected" class="form-check-input" checked value="@user.Id" />
                        }
                        else
                        {
                            <input type="checkbox" id="usersSelected" name="usersSelected" class="form-check-input" value="@user.Id" />
                        }
                    </td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                </tr>
            }
        }
    </tbody>
</table>
