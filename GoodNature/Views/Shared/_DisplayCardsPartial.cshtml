@model IEnumerable<Category>

@if(Model.Count() > 0)
{
    <div class="row">
    @foreach(Category item in Model)
    {
        <div class="col-6 col-md-4 mt-3 mb-3">
            <a href="#" class="register-link text-dark text-decoration-none" data-categoryId="@item.Id">
                <div class="card h-100">
                    <img class="img-thumbnail" src="@item.ThumbnailImagePath" alt="@item.Title">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
}
