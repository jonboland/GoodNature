@using GoodNature.Entities
@model IEnumerable<Category>

<!--Hero Section-->

<div class="row mt-5">
    <div class="col hero section">
        <img class="img-fluid rounded" src="~/images/forest-medium.jpg" />
        <div class="hero-heading rounded">
            <h2 class="hero-heading-text">Get involved with <strong>conservation</strong> projects near you</h2>
            <a id="heroRegisterButton" class="btn btn-lg btn-primary text-light hero-register-button">
                <strong>Register</strong>
            </a>
        </div>
    </div>
</div>

<hr class="section-divider" />

<!--Projects Section-->

<div class="section">
    <h3 class="section-header">Projects</h3>  
    @{
        var count = Model.Count() / 4;
        var catList = new List<Category>();
    }
    @for (int i = 0; i <= count; i++)
    {      
        catList = Model.Skip(i * 4).Take(4).ToList();

        <div class="row mt-3">
            @foreach(Category item in catList)
            {
                <div class="col-md-3">
                    <a href="#" class="text-dark">
                        <div class="card">
                            <img class="img-thumbnail" src="@item.ThumbnailImagePath" alt="@item.Title">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>
