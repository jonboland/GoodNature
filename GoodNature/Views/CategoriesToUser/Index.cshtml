@model CategoriesToUserModel

<div class="row mt-5">
    <div class="col-md-10">
        <h2>Select Conservation Projects</h2>
    </div>
</div>
<form asp-action="Index">
    <div class="row mt-3">
        <div class="col-md-9">
            <table class="table table-bordered">
                @if (Model != null)
                {
                    <thead>
                        <tr>
                            <th class="w-70">Name</th>
                            <th class="text-center w-15">Shortlist</th>
                            <th class="text-center w-15">Apply</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.Title</td>
                                <td class="text-center">
                                    @if (Model.CategoriesSelected != null && Model.CategoriesSelected.Contains(category, new CompareCategories()))
                                    {
                                        <input type="checkbox" class="form-check-inline m-0" id="categoriesSelected" name="categoriesSelected" checked value="@category.Id" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" class="form-check-inline m-0" id="categoriesSelected" name="categoriesSelected" value="@category.Id" />                                        
                                    }
                                </td>
                                <td class="text-center">
                                    @if (Model.CategoriesActive != null && Model.CategoriesActive.Contains(category, new CompareCategories()))
                                    {
                                        <input type="checkbox" class="form-check-inline m-0" id="categoriesActive" name="categoriesActive" checked value="@category.Id" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" class="form-check-inline m-0" id="categoriesActive" name="categoriesActive" value="@category.Id" />                                        
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 d-flex">
            <input type="submit" value="Save" class="btn btn-primary text-light shadow-none" />
        </div>
    </div>
</form>
