@model CategoryDetailsModel

@using GoodNature.Data

@{
    ViewData["Title"] = "Home Page";
}

@if (Model.GroupedCategoryItemsModels != null)
{
    @if (Model.GroupedCategoryItemsModels.Count() > 0)
    {
         <div class="row mt-5">
            <div class="col-md-6">
                <h2>Your Conservation Projects</h2>
            </div>
            <div class="col-md-6 text-right">
                <a asp-controller="CategoriesToUser" asp-action="Index" class="btn btn-outline-dark">Choose Projects</a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                @foreach (var cat in Model.GroupedCategoryItemsModels)
                {
                    <div class="card mt-2">
                        <h4 class="card-header text-secondary bg-white" style="cursor:pointer" data-toggle="collapse" data-target="#collapse_@cat.Id"
                            aria-expanded="false" aria-controls="#collapse_@cat.Id">
                            @cat.Title
                        </h4>
                        <div id="collapse_@cat.Id" class="collapse" aria-expanded="false" aria-controls="#collapse_@cat.Id">
                            <hr />
                            @foreach (var item in cat.Items)
                            {
                                <div class="clearfix mt-2">
                                    <img src="@item.MediaImagePath" width="100" height="100" class="img-thumbnail float-left mr-2" />
                                    <h5 class="card-title mt-2">
                                        <a class="text-dark" asp-controller="Content" asp-action="Index" asp-route-CategoryItemId="@item.CategoryItemId">
                                            @item.CategoryItemTitle
                                        </a>
                                    </h5>
                                    <p class="card-text text-dark mt-2">
                                        @item.CategoryItemDescription
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
         <div class="row mt-5">
            <div class="col-md-12">
                <h4 class="text-dark text-center">You haven't selected any conservation projects to volunteer with yet</h4>
            </div>
        </div>
    }
}
else
{
    <partial name="_DefaultHomePageContentPartial" model=@Model.Categories />
}

<div class="modal fade" id="userLoginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <partial name="_UserLoginPartial" model="new LoginModel
        {
            Email = string.Empty,
            Password = string.Empty,
            RememberMe = false,
        }">
</div>

<div class="modal fade" id="userRegistrationModal" tabindex="-1" role="dialog" aria-labelledby="registrationModalLabel" aria-hidden="true">
    <partial name="_UserRegistrationPartial" model="new RegistrationModel
        {
            Email = string.Empty,
            Password = string.Empty,
            ConfirmPassword = string.Empty,
            FirstName = string.Empty,
            LastName = string.Empty,
            PhoneNumber = string.Empty,
            Address1 = string.Empty,
            Address2 = string.Empty,
            Postcode = string.Empty,
            AcceptUserAgreement = false,
        }">
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_AuthScriptsPartial");
    }
}
